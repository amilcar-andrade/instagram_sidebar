<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/grey_300"/>

            <corners
                android:bottomRightRadius="@dimen/button_corner_radio"
                android:bottomLeftRadius="@dimen/button_corner_radio"
                android:topLeftRadius="@dimen/button_corner_radio"
                android:topRightRadius="@dimen/button_corner_radio" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/grey_300"/>

            <corners
                android:bottomRightRadius="@dimen/button_corner_radio"
                android:bottomLeftRadius="@dimen/button_corner_radio"
                android:topLeftRadius="@dimen/button_corner_radio"
                android:topRightRadius="@dimen/button_corner_radio" />
        </shape>
    </item>

</selector>

